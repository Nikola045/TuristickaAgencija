<Page x:Class="TravelAgency.View.Guest1.VisitedAccommodationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelAgency.View.Guest1"
      mc:Ignorable="d" Height="516" Width="1319">
    <Page.Resources>
        <Style x:Key="IsRatedTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsRated}" Value="NotGraded">
                    <Setter Property="Foreground" Value="Blue" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Canvas Background="White">

        <Label Content="How owners rated you:" FontSize="20" Canvas.Top="266" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="-1"/>
        <Label Content="Visited accommodations:" FontSize="20" Canvas.Top="-5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Path=VisitedHotels, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedHotel}" FontSize="16" Height="194" Width="1283" Canvas.Top="33" HorizontalAlignment="Left" VerticalAlignment="Center" Loaded="LoadVisited">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Hotel Name" Binding="{Binding Name}" />
                <DataGridTextColumn Width="*" Header="City" Binding="{Binding City}" />
                <DataGridTextColumn Width="*" Header="Country" Binding="{Binding Country}" />
                <DataGridTextColumn Width="*" Header="Type" Binding="{Binding TypeOfHotel}" />
                <DataGridTextColumn Width="*" Header="Number of Guests" Binding="{Binding MaxNumberOfGuests}" />
                <DataGridTextColumn Width="*" Header="Number of Days" Binding="{Binding MinNumberOfDays}" />
                <DataGridTextColumn Width="*" Header="Grade Status" Binding="{Binding GradeStatus}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Rate accommodations" FontSize="20" Canvas.Top="236" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Width="212"/>
        <DataGrid x:Name="DataPanel" AutoGenerateColumns="False" ItemsSource="{Binding Path=Grades, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedHotel}" FontSize="16" Height="212" Canvas.Top="304" Width="1283" HorizontalAlignment="Left" VerticalAlignment="Center">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Hotel Name" Binding="{Binding Name}" />
                <DataGridTextColumn Width="*" Header="Cleanliness" Binding="{Binding Cleanliness}" />
                <DataGridTextColumn Width="*" Header="Respecting" Binding="{Binding Respecting}" />
                <DataGridTextColumn Width="*" Header="Additional comment" Binding="{Binding CommentText}" />
            </DataGrid.Columns>
        </DataGrid>

    </Canvas>
</Page>
