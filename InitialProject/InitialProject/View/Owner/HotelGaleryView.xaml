<Window x:Class="TravelAgency.View.Owner.HotelGalery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.View.Owner"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="HotelGalery" Height="400" Width="800
        ">
    <Grid>
        <Image x:Name="Image" Source="{Binding Path=Image, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="287" Margin="46,27,0,0" VerticalAlignment="Top" Width="716"/>

        <Button Content="Next" HorizontalAlignment="Left" Margin="490,322,0,0" VerticalAlignment="Top" Height="31" Width="92" Click="NextImage"/>
        <Button Content="Preview" HorizontalAlignment="Left" Margin="215,322,0,0" VerticalAlignment="Top" Height="31" Width="87" Click="PreviewImage"/>
    </Grid>
</Window>
