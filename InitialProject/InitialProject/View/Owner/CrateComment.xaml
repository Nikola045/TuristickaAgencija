<Page x:Class="TravelAgency.View.Owner.CrateComment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelAgency.View.Owner"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="1024"
      Title="CrateComment" >

    <Grid Background="White">
        <TextBox HorizontalAlignment="Left" Margin="156,145,0,0" TextWrapping="Wrap" Text="{Binding Comment}" VerticalAlignment="Top" Width="720" Height="284" FontSize="20"/>
        <Label Content="Comment:" HorizontalAlignment="Left" Margin="150,113,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="Post a comment" HorizontalAlignment="Left" Margin="448,465,0,0" VerticalAlignment="Top" FontSize="20" Height="42" Width="172" Click="Button_Click"/>

    </Grid>
</Page>
